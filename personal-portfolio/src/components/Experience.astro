---

<section class="experience">
  <h2>Experience</h2>
  {experiences.map(exp => (
    <div class="experience-item">
      <div class="item-header">
        <h3>{exp.role} @ {exp.companyLink ? <a href={exp.companyLink} target="_blank" rel="noopener noreferrer">{exp.company}</a> : exp.company}</h3>
        <p class="dates">{exp.dates}</p>
      </div>
      {exp.details && exp.details.length > 0 && (
        <ul class="details-list">
          {exp.details.map(detail => <li>{detail}</li>)}
        </ul>
      )}
      {exp.projects && exp.projects.length > 0 && (
        <div class="projects-list">
          {exp.projects.map(project => (
            <div class="project-item">
              <h4>{project.name}</h4>
              {project.subtext && <p class="project-subtext"><em>{project.subtext}</em></p>}
              <ul class="details-list project-details">
                {project.details.map(detail => <li>{detail}</li>)}
              </ul>
            </div>
          ))}
        </div>
      )}
      {exp.details_suffix && <p class="details-suffix">{exp.details_suffix}</p>}
      {exp.skills && exp.skills.length > 0 && (
        <div class="skill-tags">
          {exp.skills.map(skill => <span class="skill-tag">{skill}</span>)}
        </div>
      )}
    </div>
  ))}
</section>

<style>
  .experience {
    padding: 2rem 0;
  }

  .experience h2 {
    font-size: 1.75rem;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 0.5rem;
  }

  .experience-item {
    margin-bottom: 2.5rem; /* More space between job entries */
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #334155; /* Subtle separator for each job */
  }
  .experience-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .item-header {
    margin-bottom: 0.75rem;
  }

  .item-header h3 {
    font-size: 1.2rem;
    color: var(--text-color);
    margin-bottom: 0.15rem;
  }
  .item-header h3 a {
    color: var(--text-color);
  }
  .item-header h3 a:hover {
    color: var(--accent-color);
  }

  .item-header .dates {
    font-size: 0.9rem;
    color: #94A3B8; /* Lighter gray for dates */
  }

  .details-list {
    list-style-type: disc;
    padding-left: 20px;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .details-list li {
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }
  
  .details-suffix {
    font-size: 0.95rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-style: italic;
  }

  .projects-list {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .project-item {
    margin-bottom: 1rem;
    padding-left: 15px;
    border-left: 2px solid var(--accent-color);
  }

  .project-item h4 {
    font-size: 1.05rem;
    color: var(--accent-color);
    margin-bottom: 0.25rem;
  }
  .project-subtext {
    font-size: 0.85rem;
    color: #94A3B8;
    margin-bottom: 0.5rem;
  }
  .project-details {
      font-size: 0.9rem;
  }
  .project-details li {
    margin-bottom: 0.3rem;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .skill-tag {
    background-color: #1E293B; /* Slightly lighter than main background */
