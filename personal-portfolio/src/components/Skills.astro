---
const skills = {
  Frontend: ["React", "NextJS", "TypeScript", "JavaScript", "Tailwind"],
  Backend: ["NodeJS", "NestJS", "Express", "NextJs", "AWS Lambda"],
  Databases: ["MySQL", "PostgresSQL", "MongoDB"],
  Misc: ["Docker", "Git", "Github Actions"]
};
---

<section class="skills">
  <h2>Skills</h2>
  {Object.entries(skills).map(([category, skillList]) => (
    <div class="skill-category">
      <h3>{category}</h3>
      <ul>
        {skillList.map(skill => <li>{skill}</li>)}
      </ul>
    </div>
  ))}
</section>

<style>
  .skills {
    padding: 2rem 0;
  }

  .skills h2 {
    font-size: 1.75rem;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 0.5rem;
  }

  .skill-category {
    margin-bottom: 1.5rem;
  }

  .skill-category h3 {
    font-size: 1.1rem;
    color: var(--accent-color);
    margin-bottom: 0.75rem;
  }

  .skill-category ul {
    list-style: none;
    padding-left: 0;
    display: flex;
    flex-wrap: wrap; /* Allow skills to wrap to next line */
    gap: 0.5rem; /* Spacing between skill items */
  }

  .skill-category li {
    background-color: #1E293B; /* Slightly lighter than main background */
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    font-size: 0.9rem;
    border: 1px solid var(--accent-color); /* Border for skill tags */
  }
</style>
