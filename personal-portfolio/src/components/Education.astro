// No script needed for this component
---

<section class="education">
  <h2>Education</h2>
  <div class="education-item">
    <h3>Bachelors in Computer Science</h3>
    <p class="institution">University of Engineering and Technology, Lahore</p>
    <p class="gpa">GPA: 3.4/4</p>
  </div>
</section>

<style>
  .education {
    padding: 2rem 0;
  }

  .education h2 {
    font-size: 1.75rem;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 0.5rem;
  }

  .education-item {
    margin-bottom: 1rem;
  }

  .education-item h3 {
    font-size: 1.2rem;
    color: var(--text-color); /* Or var(--accent-color) if preferred */
    margin-bottom: 0.25rem;
  }

  .education-item .institution {
    font-size: 1rem;
    color: #CBD5E1; /* Lighter gray for less emphasis */
    margin-bottom: 0.25rem;
  }

  .education-item .gpa {
    font-size: 0.9rem;
    color: #94A3B8; /* Even lighter gray */
  }
</style>
