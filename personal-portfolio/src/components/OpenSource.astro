---
const projects = [
  {
    name: "VSCode Font Changer",
    description: "A VS Code extension to quickly change fonts by selecting one from installed fonts on your computer.",
    link: "https://github.com/talhabalaj/vscode-font-changer",
    downloads: "15k downloads"
  }
];
---

<section class="opensource">
  <h2>Open Source</h2>
  {projects.map(project => (
    <div class="project-item">
      <h3><a href={project.link} target="_blank" rel="noopener noreferrer">{project.name}</a></h3>
      {project.downloads && <p class="downloads"><em>{project.downloads}</em></p>}
      <p class="description">{project.description}</p>
    </div>
  ))}
</section>

<style>
  .opensource {
    padding: 2rem 0;
    margin-bottom: 2rem; /* Space before footer or end of page */
  }

  .opensource h2 {
    font-size: 1.75rem;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 0.5rem;
  }

  .project-item {
    margin-bottom: 1.5rem;
  }
  .project-item:last-child {
    margin-bottom: 0;
  }

  .project-item h3 {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
  }

  .project-item h3 a {
    color: var(--text-color); /* Or var(--accent-color) for more emphasis */
  }
  .project-item h3 a:hover {
    text-decoration: underline;
    color: var(--accent-color);
  }
  
  .project-item .downloads {
    font-size: 0.9rem;
    color: #94A3B8; /* Lighter gray for download count */
    margin-bottom: 0.5rem;
  }

  .project-item .description {
    font-size: 0.95rem;
    line-height: 1.5;
  }
</style>
