---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'; // Import the Header component
import Skills from '../components/Skills.astro'; // Import the Skills component
import Education from '../components/Education.astro'; // Import the Education component
import Experience from '../components/Experience.astro'; // Import the Experience component
import OpenSource from '../components/OpenSource.astro'; // Import the OpenSource component

// SEO data for the homepage
const seoData = {
  title: "Talha Balaj - Full Stack Engineer | React, Node.js, TypeScript Developer",
  description: "Experienced Full Stack Engineer specializing in React, Node.js, TypeScript, and modern web technologies. Available for exciting opportunities in software development.",
  keywords: [
    "Full Stack Developer",
    "React Developer", 
    "Node.js Developer",
    "TypeScript",
    "JavaScript",
    "Software Engineer",
    "Web Developer",
    "Frontend Developer", 
    "Backend Developer",
    "Talha Balaj",
    "Portfolio",
    "Software Development",
    "Modern Web Technologies"
  ]
};
---

<Layout {...seoData}>
  <div class="page-container">
    <div class="section-wrapper" style="animation-delay: 0.1s">
      <Header />
    </div>
    
    <div class="section-wrapper" style="animation-delay: 0.3s">
      <Skills />
    </div>
    
    <div class="section-wrapper" style="animation-delay: 0.5s">
      <Experience />
    </div>
    
    <div class="section-wrapper" style="animation-delay: 0.7s">
      <Education />
    </div>
    
    <div class="section-wrapper" style="animation-delay: 0.9s">
      <OpenSource />
    </div>
  </div>
</Layout>

<style>
  .page-container {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    min-height: 100vh;
  }

  .section-wrapper {
    animation: fadeInUp 0.8s ease forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .page-container {
      gap: 2rem;
    }
  }
</style>
