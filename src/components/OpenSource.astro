---
const projects = [
  {
    name: "VSCode Font Changer",
    description: "A VS Code extension that revolutionizes font management in Visual Studio Code. Allows developers to quickly switch between installed fonts with a simple command palette interface.",
    link: "https://github.com/talhabalaj/vscode-font-changer",
    downloads: "15k+",
    type: "VS Code Extension",
    tech: ["TypeScript", "VS Code API", "Node.js"],
    stars: "50+",
    status: "Active"
  }
];
---

<section class="opensource terminal-card fade-in">
  <div class="terminal-window">
    <div class="terminal-header-bar">
      <span class="terminal-title">~/projects $ git log --oneline --graph</span>
    </div>
    <div class="terminal-content">
      {projects.map((project, index) => (
        <div class="project-entry" style={`animation-delay: ${index * 0.3}s`}>
          <div class="terminal-prompt">
            <span class="prompt-symbol">$</span>
            <span>git show {project.name.toLowerCase().replace(/\s+/g, '-')}</span>
          </div>
          
          <div class="project-output">
            <div class="commit-info">
              <div class="project-line">
                <span class="field">Repository:</span>
                <a href={project.link} target="_blank" rel="noopener noreferrer" class="terminal-link">
                  {project.name}
                </a>
              </div>
              <div class="project-line">
                <span class="field">Type:</span>
                <span class="value">{project.type}</span>
              </div>
              <div class="project-line">
                <span class="field">Status:</span>
                <span class="value">{project.status}</span>
                <span class="status-active">[MAINTAINED]</span>
              </div>
              <div class="project-line">
                <span class="field">Downloads:</span>
                <span class="value">{project.downloads}</span>
              </div>
              <div class="project-line">
                <span class="field">Stars:</span>
                <span class="value">{project.stars}</span>
              </div>
            </div>

            <div class="commit-message">
              <div class="section-header">Project Description:</div>
              <div class="description-text">{project.description}</div>
            </div>

            <div class="dependencies">
              <div class="section-header">Dependencies:</div>
              <div class="dep-list">
                {project.tech.map((tech, techIndex) => (
                  <div class="dep-line">
                    <span class="dep-bullet">+</span>
                    <span class="dep-name">{tech.toLowerCase().replace(/\s+/g, '-')}</span>
                    <span class="dep-version">^latest</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}

      <div class="terminal-prompt">
        <span class="prompt-symbol">$</span>
        <span class="typing-effect">echo "Open to collaboration..."</span>
      </div>
      
      <div class="output-line">
        <span>Open to collaboration...</span>
      </div>

      <div class="terminal-prompt">
        <span class="prompt-symbol">$</span>
        <span class="cursor"></span>
      </div>
    </div>
  </div>
</section>

<style>
  .opensource {
    padding: 0;
  }

  .terminal-window {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    font-family: var(--font-mono);
  }

  .terminal-header-bar {
    background: var(--bg-tertiary);
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--border-color);
    font-size: 12px;
    color: var(--text-secondary);
  }

  .terminal-content {
    padding: 1.5rem;
  }

  .project-entry {
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  .project-entry:last-of-type {
    margin-bottom: 2rem;
  }

  .terminal-prompt {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-size: 14px;
  }

  .prompt-symbol {
    color: var(--text-primary);
    font-weight: 500;
  }

  .project-output {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    margin-bottom: 1rem;
    font-size: 13px;
  }

  .commit-info {
    margin-bottom: 2rem;
  }

  .project-line {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
    gap: 1rem;
  }

  .project-line:last-child {
    margin-bottom: 0;
  }

  .field {
    color: var(--text-muted);
    min-width: 100px;
    font-size: 12px;
  }

  .value {
    color: var(--text-primary);
    font-weight: 400;
  }

  .terminal-link {
    color: var(--text-primary);
    text-decoration: none;
    border-bottom: 1px dotted var(--border-color);
    transition: all 0.2s ease;
  }

  .terminal-link:hover {
    color: var(--text-primary);
    border-bottom: 1px solid var(--text-primary);
    background: rgba(255, 255, 255, 0.1);
    padding: 0.1rem 0.3rem;
    margin: -0.1rem -0.3rem;
  }

  .status-active {
    color: var(--text-secondary);
    font-size: 11px;
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--border-color);
    background: var(--bg-secondary);
    margin-left: auto;
  }

  .commit-message {
    margin-bottom: 2rem;
  }

  .section-header {
    color: var(--text-secondary);
    font-size: 12px;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .description-text {
    color: var(--text-secondary);
    line-height: 1.5;
    font-size: 13px;
  }

  .dependencies {
    border-top: 1px solid var(--border-color);
    padding-top: 1.5rem;
  }

  .dep-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .dep-line {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 12px;
  }

  .dep-bullet {
    color: var(--text-muted);
    font-weight: bold;
    width: 15px;
  }

  .dep-name {
    color: var(--text-primary);
    min-width: 150px;
  }

  .dep-version {
    color: var(--text-muted);
    font-size: 11px;
  }

  .typing-effect {
    color: var(--text-secondary);
    animation: typewriter 2s steps(30) 1s both;
    white-space: nowrap;
    overflow: hidden;
    border-right: 2px solid var(--text-primary);
    padding-right: 2px;
  }

  .output-line {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 14px;
  }

  .cursor::after {
    content: 'â–ˆ';
    color: var(--text-primary);
    animation: blink 1s infinite;
  }

  @keyframes typewriter {
    from {
      width: 0;
      border-right-color: var(--text-primary);
    }
    to {
      width: 100%;
      border-right-color: transparent;
    }
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .terminal-content {
      padding: 1rem;
    }

    .project-output {
      padding: 1rem;
    }

    .project-line {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .field {
      min-width: auto;
    }

    .status-active {
      margin-left: 0;
    }

    .dep-line {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .dep-name {
      min-width: auto;
    }
  }

  @media (max-width: 480px) {
    .terminal-header-bar {
      font-size: 11px;
    }

    .terminal-prompt {
      font-size: 12px;
    }

    .description-text {
      font-size: 12px;
    }
  }
</style>
